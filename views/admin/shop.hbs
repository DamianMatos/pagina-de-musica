<section id="fondoshop">
        <div id="cerrar-sesion">
            <div class="row">
                <div class="col">
                    <h5 class="text-right">Hola {{ persona }} ! </h5>
                        <a href="/admin/login/logout" class="btn btn-sm btn-danger"> Cerrar sesi√≥n <i class="fa fa-sign-out"></i></a>
                    
                </div>
            </div>
        </div>

        <div class="container">

            <div class="row">
                <div class="col-7">
                    <h3>Listado de Compras</h3>
                </div>
                <div class="col-2 text-right">
                    <a href="/admin/shop/agregar" class="btn btn-success"> <i class="fa fa-plus">
