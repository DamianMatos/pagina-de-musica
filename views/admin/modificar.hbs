<section id="galeria1">
    <div class="container" style="margin:50px auto">
        <div class="row">
            <div class="col-6 offset-3">
                <h4>Modificar la compra</h4>
                <form action="/admin/shop/modificar" method="post">
                    <input type="hidden" value="{{shoping.id}}"name="id">
                    <div class="form-group">
                        <label for="">Titulo</label>
                        <input type="text" placeholder="Titulo" value="{{shoping.titulo}}" class="form-control"
                            name="titulo">
                    </div>
                    <div class="form-group">
                        <label for="">Subtitulo</label>
                        <input type="text" placeholder="Subtitulo" value="{{shoping.subtitulo}}" class="form-control"
                            name="subtitulo">
                    </div>
                    <div class="form-group">
                        <label for="">Cuerpo</label>
                        <textarea placeholder="Cuerpo" class="form-control" name="cuerpo">{{shoping.cuerpo}}</textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Modificar</button>
                </form>
                {{#if error}}
                    <p>{{message}}</p>
                {{/if}}
            </div>
        </div>
    </div>
</section>